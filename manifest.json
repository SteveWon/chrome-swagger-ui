{
   "manifest_version": 2,

   "name": "Swagger UI Console",
   "description": "Swagger UI Chrome App",
   "version": "0.1.0",
   "author": "<a href='mailto:m.shauneu@gmail.com'>Mike Shauneu</a>",
   "homepage_url": "https://github.com/mshauneu/chrome-swagger-ui",

   "icons": {
      "16" : "swagger-ui/dist/favicon-16x16.png",
      "64" : "swagger-ui/dist/favicon-32x32.png",
      "128" : "swagger-ui/dist/favicon-32x32.png"
   },

   "permissions": [
      "https://*/",
      "http://*/",
      "tabs",
      "clipboardWrite"
   ],
   "background": {
      "scripts": ["background.js"]
   }, 
   "browser_action": {
      "default_icon": {
         "19": "swagger-ui/dist/favicon-16x16.png",
         "38": "swagger-ui/dist/favicon-32x32.png"
      },
      "default_title": "Swagger UI Console"
   }
}
